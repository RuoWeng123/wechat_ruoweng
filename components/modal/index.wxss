.modal-wrapp {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.modal-main {
  width: 80%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.modal-content {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.modal-content-scroll {
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.modal-button {
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  display: block;
  position: relative;
  padding-top: 16rpx;
}

.modal-cancel {
  width: 58px;
  height: 27px;
  line-height: 27px;
  background: rgba(255, 255, 255, 1);
  border-radius: 2px;
  border: 1px solid rgba(232, 232, 232, 1);
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  float: right;
}

.modal-confirm {

  line-height: 27px;
  text-align: center;
  width: 58px;
  height: 27px;
  background: rgba(63, 135, 241, 1);
  border-radius: 2px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  float: right;
  margin-right:14px;
  margin-left: 14px;
}

