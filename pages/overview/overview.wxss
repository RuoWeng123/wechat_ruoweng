/* pages/production/production.wxss */

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart-container {
  width: 100%;
  height: 300px;
  padding: 16px 14px;
}

.flex-wrp {
  width: calc(100% - 28px);
  height: 80px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: baseline;
  justify-content: stretch;
  align-content: flex-start;
  background: #f2f6f9;
  border-image: linear-gradient(126deg, rgba(127, 127, 127, 1), rgba(230, 231, 233, 1)) 20 20;
}

.flex-item {
  width: 30vw;
  height: 80px;
  font-size: 16px;
  padding-top: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 22px;
  text-align: center;
}
